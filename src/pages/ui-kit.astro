---
import Container from '@components/Container/Container'
import Modal from '@components/Modal/Modal'
import UIKitLayout from '@layouts/UI-kit/UI-kit'
import Button from '@ui/Button/Button'
import Title from '@ui/Title/Title'
import Accordion from '@ui/Accordion/Accordion'
import AccordionElement from '@ui/AccordionElement/AccordionElement'
import Picture from '@ui/Picture/Picture'
---

<UIKitLayout>
  <div class="ui">
    <Container>
      <h1 class="ui-title">UI-kit</h1>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Заголовки</h2>
        <Title text="Title size=`xl`" as="h1" size="xl" />
        <Title text="Title size=`lg`" as="h2" size="lg" />
        <Title text="Title size=`md`" as="h3" size="md" />
        <Title text="Title size=`sm`" as="p" size="sm" />
        <Title
          text="Title size=`sm` --uppercase"
          as="p"
          size="sm"
          mods={['uppercase']}
        />
      </section>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Кнопки</h2>
        <Button text="Классическая кнопка" />
        <Button icon="icon-close" text="Кнопка с иконкой" />
        <Button icon="arrow-left" iconPosBefore text="Кнопка с иконкой" />
        <Button mods={['fill']} text="Кнопка с фоном" />
        <Button mods={['fill']} as="a" href="#" text="Кнопка ссылка" />
      </section>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Модалки</h2>
        <Button text="Стандартная модалка" modal="example" />
      </section>
      <section data-ui-section>
        <h2 class="ui__title" data-ui-title>Аккордеон</h2>
        <h3>Аккордеон с текстом</h3>
        <Accordion>
          <AccordionElement title="Заголовок 1" text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu. In enim justo, rhoncus ut, imperdiet a, venenatis vitae, justo. Nullam dictum felis eu pede mollis pretium. Integer tincidunt. Cras dapibus. Vivamus elementum semper nisi." />
          <AccordionElement title="Заголовок 2" text="Содержимое 2" />
          <AccordionElement title="Заголовок 3" text="Содержимое 3" />
        </Accordion>
        <h3>Аккордеон с текстом (открыт всегда только один элемент)</h3>
        <Accordion data-single>
          <AccordionElement title="Заголовок 1" text="Открыт при загрузке" isActive />
          <AccordionElement title="Заголовок 2" text="Содержимое 2" />
          <AccordionElement title="Заголовок 3" text="Содержимое 3" />
        </Accordion>
        <h3>Аккордеон с произвольным контентом</h3>
        <Accordion>
          <AccordionElement title="Заголовок 1">
            <p>Содержимое 1</p>
            <Button text="Кнопка" />
          </AccordionElement>
          <AccordionElement title="Изображение">
            <Picture
              name="mountain"
              folder="images"
              alt="Example image"
              type="jpg"
              width={360}
            />
          </AccordionElement>
          <AccordionElement title="Заголовок 3" text="Содержимое 3" />
        </Accordion>
        <h3>Многоуровневый аккордеон</h3>
        <Accordion>
          <AccordionElement title="Заголовок 1">
            <p>Содержимое 1</p>
            <Accordion>
              <AccordionElement title="Подзаголовок 1">
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum, deserunt ducimus consectetur labore unde tempora. Quas quae ducimus at, fugit, aspernatur impedit excepturi minus error suscipit aliquam nisi molestiae eum!</p>
              </AccordionElement>
              <AccordionElement title="Подзаголовок 2">
                <p>Содержимое подзаголовка 2</p>
              </AccordionElement>
            </Accordion>
          </AccordionElement>
          <AccordionElement title="Заголовок 2">
            <p>Содержимое 2</p>
            <Accordion>
              <AccordionElement title="Подзаголовок 1">
                <p>Содержимое подзаголовка 1</p>
              </AccordionElement>
              <AccordionElement title="Подзаголовок 2">
                <p>Содержимое подзаголовка 2</p>
                <Accordion>
                  <AccordionElement title="Подзаголовок 1">
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eaque, libero iure, tempore praesentium voluptates labore est perferendis excepturi accusamus, autem itaque repellat maxime sit in blanditiis nostrum qui cupiditate totam?</p>
                  </AccordionElement>
                  <AccordionElement title="Подзаголовок 2">
                    <p>Содержимое подзаголовка 2</p>
                  </AccordionElement>
                </Accordion>
              </AccordionElement>
            </Accordion>
          </AccordionElement>
        </Accordion>
      </section>
    </Container>
  </div>
  <Modal name="example">
    <h1>Example modal</h1>
  </Modal>
</UIKitLayout>

